<div class = "row">
	<div class = "col-md-6 col-md-offset-3">
		<%= form_for @entry do |f| %>
			
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
			
			<%= f.label :content %> 
			<%= f.text_field :content, class: "form-control"%> 
			
			<%= f.submit  "Create Entry", class: "btn btn-primary", data: {disable_with: "Creating..."} %> 
		
		<% end %>
	</div>
</div>